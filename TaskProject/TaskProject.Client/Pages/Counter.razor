@page "/counter"
@using Radzen

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<RadzenButton Click="IncrementCount" Text="Primary" ButtonStyle="ButtonStyle.Primary" />
@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
